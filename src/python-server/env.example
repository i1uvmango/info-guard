# 애플리케이션 기본 설정
APP_NAME=Info-Guard Python Server
APP_VERSION=1.0.0
DEBUG=true

# 서버 설정
HOST=0.0.0.0
PORT=8000
WORKERS=1

# 로깅 설정
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# 데이터베이스 설정
DATABASE_URL=postgresql://infoguard:infoguard123@localhost:5432/infoguard
REDIS_URL=redis://localhost:6379

# Redis 설정
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# YouTube API 설정
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_API_QUOTA_LIMIT=10000

# AI 모델 설정
AI_MODEL_PATH=./models
USE_GPU=true
GPU_MEMORY_LIMIT=14GB

# 보안 설정
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 캐시 설정
CACHE_TTL=3600
